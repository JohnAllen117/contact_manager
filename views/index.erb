<h1>Contacts</h1>

<ul>
  <% @contacts.each do |contact| %>
    <li><a href="/contacts/<%= contact.id %>"><%= contact.name %></a> - <%= contact.phone_number %></li>
  <% end %>
</ul>

<form id="searchbox" action="/" method="post">
 <input name= "search" id="search" type="text" placeholder="Search . . .">
 <input type="submit"/>
</form>


